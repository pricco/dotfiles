" Windows, Panes, Tabs and Splits {

    " Switch Window
    noremap <silent> w call system('tmux select-window -t :+')

    " Switch Pane
    noremap <silent> p call system('tmux select-pane -t :.+')

    " Switch Tab
    noremap t gt
    " Switch Split
    noremap s <C-w><C-w>
" }

